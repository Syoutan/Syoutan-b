@model IEnumerable<WebApplicationTest3.Models.invoice_detail>

@{
    ViewBag.Title = "Index";
}

<h2>請求書</h2>
<div>
    <table border="0" align="left" width="300">
        <tr>
            <th width="50%">
                <h4>日付</h4>
            </th>
            <th width="50%">
                <h4>客先名</h4>
            </th>
        </tr>
        <tr>
            <td>
                <h4>@ViewBag.ym</h4>
            </td>
            <td>
                <h4>@ViewBag.cname</h4>
            </td>
        </tr>
    </table>
    <br />

    <table border="0" align="right" width="300">
        <tr>
            <th width="50%">
                <h4>XXXXX販売株式会社</h4>
            </th>
        </tr>
        <tr>
            <td>
                <h4>福井県福井市XXXXX町１－３０－７</h4>
            </td>
        </tr>
        <tr>
            <td>
                <h4>(0776)66-9999</h4>
            </td>           
        </tr>
        <tr>
            <td>
                <div id="barcode"></div>
            </td>
        </tr>
    </table>
    <br />
</div>
<div class="col-lg-10 col-md-10 col-sm-11">
    <table class="table table-striped">
        <tr>
            <th>
                <h5>商品コード</h5>
            </th>
            <th>
                <h5>商品名</h5>
            </th>
            <th>
                <h5>出荷日</h5>
            </th>
            <th>
                <h5 align="center">出荷数</h5>
            </th>
            <th>
                <h5 align="center">販売価格</h5>
            </th>
            <th>
                <h5 align="center">小計</h5>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.qnt)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.value)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.small_sum)
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right">税抜き合計</td>
            <td align="right"> @ViewBag.charge </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right">税</td>
            <td align="right"> @ViewBag.tax </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right">合計</td>
            <td align="right"> @ViewBag.all </td>
        </tr>
    </table>
</div>

<div class="clearboth"></div>
<script type="text/javascript">
$(function(){
   $("#barcode").barcode("@ViewBag.barcode", "ean13");
});
</script>
