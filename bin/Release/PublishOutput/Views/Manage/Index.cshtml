@model WebApplicationTest3.Models.IndexViewModel
@{
    ViewBag.Title = "管理";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>アカウント設定の変更</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>パスワード:</dt>
        

            @if (Model.HasPassword)
            {
                <dd>
                    @Html.ActionLink("パスワードの変更", "ChangePassword")
                </dd>
                <dt>ユーザー：</dt>
                <dd>
                @Html.ActionLink("ユーザーの変更", "ChangeUser")
                </dd>
                <dt>氏名：</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>

                 <dt>郵便番号：</dt>
                 <dd>@Html.DisplayFor(model => model.PostNo)</dd>
                                  
                 <dt>住所：</dt>
                <dd>
                    @Html.DisplayFor(model => model.Address1)
                </dd>
            }
            else
            {
                <dd>
                    @Html.ActionLink("作成", "SetPassword")
                </dd>
            }

           <dt>ユーザー削除:</dt>
            <dd>
                @Html.ActionLink("ユーザー削除", "DeleteUserConfirm")
            </dd>
      
            <dt>外部ログイン:</dt>
            <dd>
                @Model.Logins.Count [
                @Html.ActionLink("管理", "ManageLogins") ]
            </dd>
            @*
