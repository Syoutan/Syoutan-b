@model IEnumerable<WebApplicationTest3.Models.invoice_detail>

@{
    ViewBag.Title = "Index";
}

<h2>請求表示</h2>
<div class="col-lg-5 col-md-5 col-sm-6">
    <table class=" table">
        <tr>
            <th>
                <h5>日付</h5>
            </th>
            <th>
                <h5>客先名</h5>
            </th>
            <th>　　　　　　　　　　　　　　　　</th>
            <th>XXXXX販売会社</th>
        </tr>
        <tr>
            <td>
                <h5>@ViewBag.ym</h5>
            </td>
            <td>
                <h5>@ViewBag.cname</h5>
            </td>
           <td>　　　　　　　　　　　　　　　　</td>
            <td>住所：ｘｘ県ｘｘ市</td>
        </tr>
    </table>
    <br />
</div>
<div class="col-lg-10 col-md-10 col-sm-11">
    <table class="table table-striped">
        <tr>
            <th>
                <h5>商品コード</h5>
            </th>
            <th>
                <h5>商品名</h5>
            </th>
            <th>
                <h5>出荷日</h5>
            </th>
            <th>
                <h5 align="center">出荷数</h5>
            </th>
            <th>
                <h5 align="center">販売価格</h5>
            </th>
            <th>
                <h5 align="center">小計</h5>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.qnt)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.value)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.small_sum)
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right">税抜き合計</td>
            <td align="right"> @ViewBag.charge </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right">税</td>
            <td align="right"> @ViewBag.tax </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right">合計</td>
            <td align="right"> @ViewBag.all </td>
        </tr>
    </table>
</div>

<div class="clearboth"></div>