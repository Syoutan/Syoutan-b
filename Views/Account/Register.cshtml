@model WebApplicationTest3.Models.RegisterViewModel
@{
    ViewBag.Title = "登録";
}

<h2>@ViewBag.Title.</h2>

<script>
    $(function () {
        $('#AdBtn').click(function (e) {
            var pn = $("#PostNo").val();
            AjaxZip3.zip2addr("PostNo","","Address1", "Address1");
        });
    });
</script>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>新しいアカウントを作成します。</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <table class="tb1">
        <tr>
            <th class="th1">
                <div class="form-group">
                    @Html.LabelFor(m => m.PostNo, new { @class = "col-md-2 control-label" })

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PostNo, new { @class = "form-control", maxlength = "7" })
                    </div>
                </div>
            </th>
            <th class="th2">
                
            </th>
        </tr>
        <tr>
            <td class="td1">
                <div class="col-md-10">
                    <input type="button" value="住所検索" id="AdBtn" class="btn btn-default">
                </div>
            </td>
        </tr>
    </table>
    <div class="form-group">
        @Html.LabelFor(m => m.Address1, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="登録" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
