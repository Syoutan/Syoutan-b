@model IEnumerable<WebApplicationTest3.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>商品リスト</h2>

<p>
    @Html.ActionLink("新規作成", "Create", "", new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            <h4>商品コード</h4>
        </th>
        <th>
            <h4>商品名</h4>
        </th>
        <th>
            <h4>標準販売価格</h4>
        </th>
        <th>
            <h4>在庫数</h4>
        </th>
        <th>
            <h4>メーカー名</h4>
        </th>
        <th>
            <h4>カテゴリー</h4>
        </th>
         <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stok)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maker.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.name)
        </td>
        <td>
            @Html.ActionLink("編集", "Edit", new { id=item.id }) |
            @Html.ActionLink("削除", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
